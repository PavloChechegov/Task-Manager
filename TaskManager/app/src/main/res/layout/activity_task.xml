<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.pavlochechegov.taskmanager.TaskActivity" android:orientation="horizontal">

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/etTaskTitle"
              android:singleLine="true"
              android:textSize="@dimen/text_size" android:inputType="textCapWords|textAutoComplete|text"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:maxLines="3"
              android:id="@+id/etTaskDescription"
              android:linksClickable="false"
              android:layout_below="@+id/etTaskTitle" android:inputType="textCapWords|textAutoComplete|text"/>


        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnCancel"
                android:text="@string/button_cancel"
                android:layout_below="@+id/etTaskDescription" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>


        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnSaveTask"
                android:text="@string/button_save_task"
                android:layout_below="@+id/btnCancel" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>


</RelativeLayout>
